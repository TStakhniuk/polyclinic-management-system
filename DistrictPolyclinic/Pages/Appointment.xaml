<Page x:Class="DistrictPolyclinic.Pages.Appointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DistrictPolyclinic.Pages"
      xmlns:services="clr-namespace:DistrictPolyclinic.Services"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Appointment" Foreground="Black" SnapsToDevicePixels="True" ClipToBounds="True"
      MouseDown="Window_MouseDown">

    <Page.Resources>
        <!-- Week change animation for the "Forward" button -->
        <Storyboard x:Key="WeekChangeForwardStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="gridContainer"
        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
        From="0" To="-800" Duration="0:0:0.25" />
        </Storyboard>

        <!-- Week change animation for the "Back" button -->
        <Storyboard x:Key="WeekChangeBackwardStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="gridContainer"
        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
        From="0" To="800" Duration="0:0:0.25" />
        </Storyboard>

        <!-- Animation of returning to center after "Forward" -->
        <Storyboard x:Key="ResetPositionForwardStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="gridContainer"
        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
        From="-800" To="0" Duration="0:0:0" />
        </Storyboard>

        <!-- Animation of returning to center after "Back" -->
        <Storyboard x:Key="ResetPositionBackwardStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="gridContainer"
        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
        From="800" To="0" Duration="0:0:0" />
        </Storyboard>

        <Style x:Key="ScheduleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f0f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StandardComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StandardTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Page.Resources>
    
    <Border Background="White" CornerRadius="8">
    <Grid Background="Transparent">
        <Border CornerRadius="8" Background="#F5F5F5" Height="35" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Buttons (left) -->
                <StackPanel Orientation="Horizontal" Background="Transparent" Grid.Column="0">
                    <!-- Back -->
                    <Button Width="30" Height="30" Margin="5,0,0,0" VerticalAlignment="Center" 
                Click="BackButton_Click" Background="Transparent" BorderBrush="Transparent" 
                MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Content>
                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" 
                      Fill="#757575" Margin="0,0,8,6"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip Content="Попередній тиждень" />
                        </Button.ToolTip>
                    </Button>

                    <!-- Forward -->
                    <Button Width="30" Height="30" VerticalAlignment="Center" 
                Click="ForwardButton_Click" Background="Transparent" BorderBrush="Transparent" 
                MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Content>
                            <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                      Fill="#757575" Margin="0,0,6,6"/>
                        </Button.Content>
                        <Button.ToolTip>
                            <ToolTip Content="Наступний тиждень" />
                        </Button.ToolTip>
                    </Button>

                    <!-- Calendar -->
                    <Button x:Name="MonthYearButton" FontSize="14" FontWeight="Bold"
                Background="Transparent" BorderBrush="Transparent"
                Click="MonthYearButton_Click"
                MouseEnter="MonthYearButton_MouseEnter" MouseLeave="MonthYearButton_MouseLeave"
                Width="Auto" Height="30">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="MonthYearText" Foreground="Black" Margin="5,2,0,0" />
                                <Path x:Name="ArrowPath" Data="M7,10L12,15L17,10H7Z" Fill="Black" Margin="0,0,5,8"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <!-- Popup -->
                    <Popup x:Name="CalendarPopup" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=MonthYearButton}" VerticalOffset="-3">
                        <Popup.Resources>
                            <Style TargetType="Popup">
                                <Setter Property="Popup.AllowsTransparency" Value="True"/>
                            </Style>
                        </Popup.Resources>
                        <Viewbox Height="210" Width="210">
                            <Calendar x:Name="CalendarControl" SelectedDatesChanged="CalendarControl_SelectedDatesChanged" DisplayMode="Month" Background="White"/>
                        </Viewbox>
                    </Popup>
                </StackPanel>

                <!-- Filters (right) -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0">
                    <TextBlock Text="Спеціалізація:" VerticalAlignment="Center" Margin="10,0,5,0"
                   Style="{StaticResource StandardTextBlockStyle}"/>
                    <ComboBox x:Name="cmbSpecializations" Width="150" Height="25" SelectionChanged="cmbSpecializations_SelectionChanged"
                  services:ComboBoxPlaceholderService.Placeholder="Оберіть спеціалізацію"
                  Margin="0,0,10,0" IsEditable="True" IsTextSearchEnabled="True"
                  Style="{StaticResource StandardComboBoxStyle}"
                  VerticalAlignment="Center"/>

                    <TextBlock Text="Лікар:" VerticalAlignment="Center" Margin="10,0,5,0"
                   Style="{StaticResource StandardTextBlockStyle}"/> 
                    <ComboBox x:Name="cmbDoctors" Width="200" Height="25"
                  services:ComboBoxPlaceholderService.Placeholder="Оберіть лікаря"
                  Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True"
                  VerticalAlignment="Center" SelectionChanged="cmbDoctors_SelectionChanged"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Name="MainGrid">
            <!-- Main calendar grid -->
            <Grid Name="gridContainer" Margin="0,35,0,0">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="gridTransform" />
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <!-- Left column for time -->
                    <ColumnDefinition Width="Auto"/>
                        <!-- Columns for days of the week (Monday - Sunday) -->
                        <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- Rows for each hour -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Schedule -->
                <Button Name="Button_1_1" Grid.Row="1" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_2" Grid.Row="1" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_3" Grid.Row="1" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_4" Grid.Row="1" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_5" Grid.Row="1" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_6" Grid.Row="1" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_1_7" Grid.Row="1" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_2_1" Grid.Row="2" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_2" Grid.Row="2" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_3" Grid.Row="2" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_4" Grid.Row="2" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_5" Grid.Row="2" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_6" Grid.Row="2" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_2_7" Grid.Row="2" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_3_1" Grid.Row="3" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_2" Grid.Row="3" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_3" Grid.Row="3" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_4" Grid.Row="3" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_5" Grid.Row="3" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_6" Grid.Row="3" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_3_7" Grid.Row="3" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_4_1" Grid.Row="4" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_2" Grid.Row="4" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_3" Grid.Row="4" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_4" Grid.Row="4" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_5" Grid.Row="4" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_6" Grid.Row="4" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_4_7" Grid.Row="4" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_5_1" Grid.Row="5" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_2" Grid.Row="5" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_3" Grid.Row="5" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_4" Grid.Row="5" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_5" Grid.Row="5" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_6" Grid.Row="5" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_5_7" Grid.Row="5" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_6_1" Grid.Row="6" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_2" Grid.Row="6" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_3" Grid.Row="6" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_4" Grid.Row="6" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_5" Grid.Row="6" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_6" Grid.Row="6" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_6_7" Grid.Row="6" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_7_1" Grid.Row="7" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_2" Grid.Row="7" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_3" Grid.Row="7" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_4" Grid.Row="7" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_5" Grid.Row="7" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_6" Grid.Row="7" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_7_7" Grid.Row="7" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_8_1" Grid.Row="8" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_2" Grid.Row="8" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_3" Grid.Row="8" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_4" Grid.Row="8" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_5" Grid.Row="8" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_6" Grid.Row="8" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_8_7" Grid.Row="8" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                <Button Name="Button_9_1" Grid.Row="9" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_2" Grid.Row="9" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_3" Grid.Row="9" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_4" Grid.Row="9" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_5" Grid.Row="9" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_6" Grid.Row="9" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>
                <Button Name="Button_9_7" Grid.Row="9" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" MouseDoubleClick="Cell_MouseDoubleClick"/>

                
                <!-- Top row with days of the week and numbers -->
                <TextBlock Name="MondayText" Text="Понеділок" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="MondayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="MondayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="TuesdayText" Text="Вівторок" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="TuesdayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="TuesdayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="WednesdayText" Text="Середа" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="WednesdayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="WednesdayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="ThursdayText" Text="Четвер" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="ThursdayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="ThursdayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="FridayText" Text="П'ятниця" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="FridayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="FridayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="SaturdayText" Text="Субота" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="SaturdayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="6" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="SaturdayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="SundayText" Text="Неділя" Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="5"/>
                <Border Name="SundayBorder" Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="7" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3">
                    <TextBlock Name="SundayDate" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>


                <!-- Left column with time -->
                <TextBlock Text=" 8:00" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 9:00" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 10:00" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 11:00" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 12:00" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 13:00" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 14:00" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 15:00" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                <TextBlock Text=" 16:00" Grid.Row="9" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,5,0"/>

            </Grid>

                <Grid Name="OverlayGrid" IsHitTestVisible="True" Margin="0,35,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border  Width="23" Height="23" Background="Transparent" CornerRadius="20" Padding="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,3" />
                    <TextBlock Text=" " Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="32.8,0,0,0"/>

                </Grid>
        </Grid>

    </Grid>
</Border>

</Page>
