<Page x:Class="DistrictPolyclinic.Pages.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DistrictPolyclinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="News">

    <Grid Background="{DynamicResource SecundaryBackgroundColor}">
        <Viewbox Stretch="Uniform" Margin="20">
            <Grid Width="1000" Height="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Block 1 -->
                <Border CornerRadius="12" Background="#545AFF" Margin="0,0,0,20" Padding="20" Grid.Row="0" Grid.ColumnSpan="2" ClipToBounds="True">
                    <Grid>
                        <StackPanel Margin="0,0,-10,-30">
                            <TextBlock Text="Події" FontSize="35" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"  HorizontalAlignment="Left"/>
                            <ScrollViewer Height="200"
              VerticalScrollBarVisibility="Hidden"
              HorizontalScrollBarVisibility="Disabled"
              PanningMode="VerticalOnly"
              Margin="0">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="Width" Value="0"/>
                                    </Style>
                                </ScrollViewer.Resources>

                                <TextBlock x:Name="NewsBox"
               Width="850"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Foreground="White"
               TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </StackPanel>
                        <Button Background="Transparent"
        BorderThickness="0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,-40,-40,0"
        Click="BellIcon_Click"
        Focusable="False">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{x:Null}">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>

                            <Border Background="#5055D4" CornerRadius="100" Width="160" Height="160">
                                <Viewbox Stretch="Uniform" Margin="30 0 0 0">
                                    <Canvas Width="32" Height="22">
                                        <Path x:Name="NotificationIconPath" Fill="White" Data="M21,19V20H3V19L5,17V11C5,7.9 7.03,5.17 10,4.29C10,4.19 10,4.1 10,4A2,2 0 0,1 12,2A2,2 0 0,1 14,4C14,4.1 14,4.19 14,4.29C16.97,5.17 19,7.9 19,11V17L21,19M14,21A2,2 0 0,1 12,23A2,2 0 0,1 10,21"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                        </Button>


                    </Grid>
                </Border>

                <!-- Block 2 -->
                <Border CornerRadius="12" Background="#FFA023" Margin="0,20,30,0" Padding="20" Grid.Row="1" Grid.Column="0" ClipToBounds="True">
                    <Grid>
                        <StackPanel Margin="0,0,-10,-20">
                            <TextBlock Text="Очікуваних прийомів" FontSize="35" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" Width="200" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                            <TextBlock x:Name="UpcomingAppointmentsText" Text="25" Width="290" FontSize="70" FontWeight="Bold" Foreground="White" Padding="65 0 0 0" TextWrapping="Wrap"/>
                            <TextBlock x:Name="Block2Date" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,25,0,0" HorizontalAlignment="Right"/>
                        </StackPanel>
                        <Border Background="#FFC373" CornerRadius="100" Width="160" Height="160" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-40,-40,0">
                            <Viewbox Stretch="Uniform" Margin="30 0 0 0">
                                <Canvas Width="32" Height="22">
                                    <Path Fill="White" Data="M19,4H18V2H16V4H8V2H6V4H5A2,2 0 0,0 3,6V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V6A2,2 0 0,0 19,4M19,20H5V10H19V20M5,8V6H19V8H5M10.56,18.46L16.5,12.53L15.43,11.47L10.56,16.34L8.45,14.23L7.39,15.29L10.56,18.46Z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- Block 3 -->
                <Border CornerRadius="12" Background="#C012FF" Margin="30,20,0,0" Padding="20" Grid.Row="1" Grid.Column="1" ClipToBounds="True">
                    <Grid>
                        <StackPanel Margin="0,0,-10,-20">
                            <TextBlock Text="Завершені прийоми" FontSize="35" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" Width="200" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                            <TextBlock x:Name="FinishedAppointmentsText" Text="25" Width="290" FontSize="70" FontWeight="Bold" Foreground="White" Padding="65 0 0 0" TextWrapping="Wrap"/>
                            <TextBlock x:Name="Block3Date" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,25,0,0" HorizontalAlignment="Right"/>
                        </StackPanel>
                        <Border Background="#DC7BFF" CornerRadius="100" Width="160" Height="160" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-40,-40,0">
                            <Viewbox Stretch="Uniform" Margin="30 0 0 0">
                                <Canvas Width="32" Height="22">
                                    <Path Fill="White" Data="M21 8C19.5 8 18.7 9.4 19.1 10.5L15.5 14.1C15.2 14 14.8 14 14.5 14.1L11.9 11.5C12.3 10.4 11.5 9 10 9C8.6 9 7.7 10.4 8.1 11.5L3.5 16C2.4 15.7 1 16.5 1 18C1 19.1 1.9 20 3 20C4.4 20 5.3 18.6 4.9 17.5L9.4 12.9C9.7 13 10.1 13 10.4 12.9L13 15.5C12.7 16.5 13.5 18 15 18C16.5 18 17.3 16.6 16.9 15.5L20.5 11.9C21.6 12.2 23 11.4 23 10C23 8.9 22.1 8 21 8M15 9L15.9 6.9L18 6L15.9 5.1L15 3L14.1 5.1L12 6L14.1 6.9L15 9M3.5 11L4 9L6 8.5L4 8L3.5 6L3 8L1 8.5L3 9L3.5 11Z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
