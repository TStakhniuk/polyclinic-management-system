<Page x:Class="DistrictPolyclinic.Pages.ResultAppointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DistrictPolyclinic.Pages"
      xmlns:services="clr-namespace:DistrictPolyclinic.Services"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ResultAppointment" FontFamily="Poppins">

    <Page.Resources>
        <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StandardComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StandardTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}" Padding="20">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Main part -->
                <StackPanel Grid.Row="0">
                    <Label Content="Результат прийому" FontSize="35" FontWeight="Bold" 
               Foreground="{DynamicResource PrimaryTextColor}" 
               HorizontalAlignment="Center" Margin="0 0 0 10"/>

                    <Separator Margin="0 0 0 20" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>

                    <Grid MinWidth="775">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left side -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Лікар" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 0"/>
                            <ComboBox x:Name="cmbDoctor" services:ComboBoxPlaceholderService.Placeholder="Оберіть лікаря для вибору прийому" SelectionChanged="cmbDoctor_SelectionChanged"
               Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True"
               Margin="0 0 0 18"/>

                            <TextBlock Text="Номер прийому" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <ComboBox x:Name="cmbNumberAppointment" services:ComboBoxPlaceholderService.Placeholder="Оберіть номер прийому" Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True" Margin="0 0 0 15">
                            </ComboBox>

                            <TextBlock Text="Скарги" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtComplaints" Height="70" services:TextBoxPlaceholderServiceBig.Placeholder="Введіть скарги пацієнта" Style="{StaticResource StandardTextBoxStyle}" VerticalContentAlignment="Top" TextWrapping="Wrap" MaxWidth="368" Margin="0 0 0 12"/>

                            <TextBlock Text="Діагноз" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtDiagnosis" Height="70"  services:TextBoxPlaceholderServiceBig.Placeholder="Введіть діагноз" Style="{StaticResource StandardTextBoxStyle}" VerticalContentAlignment="Top" TextWrapping="Wrap" MaxWidth="368" Margin="0 0 0 12"/>

                            <TextBlock Text="Заключення" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtConclusion" Height="70"  services:TextBoxPlaceholderServiceBig.Placeholder="Введіть заключення" Style="{StaticResource StandardTextBoxStyle}" VerticalContentAlignment="Top" TextWrapping="Wrap" MaxWidth="368" Margin="0 0 0 12"/>
                        </StackPanel>

                        <!-- Right side -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Застосування ліків" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryTextColor}"
               HorizontalAlignment="Center" Margin="0 0 0 15"/>
                            <Separator Margin="0 0 0 20" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>

                            <TextBlock Text="Лікарський засіб" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <ComboBox x:Name="txtMedicinalProduct" services:ComboBoxPlaceholderService.Placeholder="Оберіть лікарський засіб"
              Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True"
              Margin="0 0 0 15"/>
 
                            <Grid Margin="0 0 0 15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Доза препарата" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="txtDosage" Style="{StaticResource StandardTextBoxStyle}" 
                     services:TextBoxPlaceholderService.Placeholder="Введіть дозу препарату"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Кількість" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="txtQuantity" Style="{StaticResource StandardTextBoxStyle}" 
                     services:TextBoxPlaceholderService.Placeholder="Введіть використану кількість"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Список застосованих ліків" Style="{StaticResource StandardTextBlockStyle}" Margin="0 5 0 5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <ListView x:Name="lstMedicinal"
                                          ItemsSource="{Binding administeredDrugs}"
                                          Margin="0 0 0 10"
                                          Height="165"
                                          BorderThickness="0"
                                          Width="360"
                                          HorizontalContentAlignment="Left"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    <ListView.Resources>
                                        <Style TargetType="GridViewColumnHeader">
                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                        </Style>
                                    </ListView.Resources>
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="228"/>
                                            <GridViewColumn Header="Доза" DisplayMemberBinding="{Binding DosageDisplay}" Width="65"/>
                                            <GridViewColumn Header="Кількість" DisplayMemberBinding="{Binding QuantityDisplay}" Width="65"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>

                            <Grid Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="Видалити" FontSize="15"
                                Background="#00308F" Foreground="White"
                                FontWeight="Bold" Padding="10 5"
                                HorizontalAlignment="Center" Width="135" Height="35"
                                Style="{StaticResource StandardButtonStyle}" Click="DeleteMedicinal_Click"/>

                                <Button Grid.Column="2" Content="Додати" FontSize="15"
                                Background="#00308F" Foreground="White"
                                FontWeight="Bold" Padding="10 5"
                                HorizontalAlignment="Center" Width="135" Height="35"
                                Style="{StaticResource StandardButtonStyle}" Click="AddMedicinal_Click"/>
                            </Grid>
                        </StackPanel>
                        
                    </Grid>
                    <Separator Margin="0 15 0 0" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>
                </StackPanel>

                <!-- Button row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Скасувати" FontSize="17" 
                Background="White" Foreground="Black" 
                FontWeight="Bold" Padding="10 5" Margin="0 15 0 0" 
                HorizontalAlignment="Left" Width="135" Height="35" Style="{StaticResource StandardButtonStyle}"
                Click="CancelButton_Click"/>

                    <Button Grid.Column="1" Content="Зберегти" FontSize="17" 
                Background="#00308F" Foreground="White" 
                FontWeight="Bold" Padding="10 5" Margin="0 15 0 0" 
                HorizontalAlignment="Right" Width="135" Height="35" Style="{StaticResource StandardButtonStyle}"
                Click="SaveButton_Click"/>
                </Grid>
            </Grid>
        </Viewbox>
    </Border>
</Page>
