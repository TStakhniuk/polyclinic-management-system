<Page x:Class="DistrictPolyclinic.Pages.MedicalCard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DistrictPolyclinic.Pages"
      xmlns:services="clr-namespace:DistrictPolyclinic.Services"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MedicalCard" FontFamily="Poppins">

    <Page.Resources>
        <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StandardComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StandardTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <Grid>
                            <Grid.Resources>
                                <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                            </Grid.Resources>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                        <VisualTransition To="MouseOver" GeneratedDuration="0:0:0.1" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Normal" />
                                    <VisualState Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ContentElement" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FF99C1E2" Duration="0"/>
                                            <ColorAnimation Storyboard.TargetName="watermark_decorator" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FF99C1E2" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup Name="WatermarkStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Unwatermarked" />
                                    <VisualState Name="Watermarked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentElement" Storyboard.TargetProperty="Opacity" To="0" Duration="0" />
                                            <DoubleAnimation Storyboard.TargetName="PART_Watermark" Storyboard.TargetProperty="Opacity" To="1" Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup Name="FocusStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Unfocused" />
                                    <VisualState Name="Focused">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="1" Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>


                            <Border x:Name="Border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="1" 
                            Opacity="1">
                                <Grid x:Name="WatermarkContent"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <Border x:Name="ContentElement" BorderThickness="1">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="#FFFFFFFF"/>
                                        </Border.BorderBrush>
                                    </Border>
                                    <Border x:Name="watermark_decorator" BorderThickness="1">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="#FFFFFFFF"/>
                                        </Border.BorderBrush>
                                        <ContentControl x:Name="PART_Watermark"
                                                    Opacity="0"
                                                    Focusable="False"
                                                    IsHitTestVisible="False"
                                                    Padding="2">
                                            <ContentControl.Template>
                                                <ControlTemplate>
                                                    <TextBlock Text="Оберіть дату народження" Foreground="Gray" />
                                                </ControlTemplate>
                                            </ContentControl.Template>
                                        </ContentControl>
                                    </Border>
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                    <Border x:Name="FocusVisual" BorderBrush="#FF45D6FA" CornerRadius="1" Opacity="0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}" Padding="20">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Main part -->
                <StackPanel Grid.Row="0">
                    <Label Content="Медична картка" FontSize="35" FontWeight="Bold" 
               Foreground="{DynamicResource PrimaryTextColor}" 
               HorizontalAlignment="Center" Margin="0 0 0 10"/>

                    <Separator Margin="0 0 0 20" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>

                    <Grid MinWidth="775">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left side -->
                        <StackPanel Grid.Column="0">

                            <TextBlock Text="ПІБ пацієнта" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtFullName" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <TextBlock Text="Стать пацієнта" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtGender" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <TextBlock Text="Дата народження" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtBirthDate" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <TextBlock Text="Домашня адреса" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtAddress" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <TextBlock Text="Номер телефону" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtPhone" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <Grid Margin="0 0 0 15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Дата відкриття" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="txtCardOpening" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Дата закриття" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                                    <TextBox x:Name="txtCardClosure" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Right side -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Група крові" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtBloodGroup" Style="{StaticResource StandardTextBoxStyle}" IsReadOnly="True" Margin="0 0 0 15"/>

                            <TextBlock Text="Хронічні захворювання" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtChronicDiseases" Height="123" Style="{StaticResource StandardTextBoxStyle}" VerticalContentAlignment="Top" TextWrapping="Wrap" IsReadOnly="True" MaxWidth="368" Margin="0 0 0 15"/>

                            <TextBlock Text="Алергії" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtAllergies" Height="123" Style="{StaticResource StandardTextBoxStyle}" VerticalContentAlignment="Top" TextWrapping="Wrap" IsReadOnly="True" MaxWidth="368" Margin="0 0 0 15"/>

                        </StackPanel>
                    </Grid>
                    <Separator Margin="0 15 0 0" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>
                </StackPanel>


                <!-- Button row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Назад" FontSize="17" 
                Background="White" Foreground="Black" 
                FontWeight="Bold" Padding="10 5" Margin="0 15 0 0" 
                HorizontalAlignment="Left" Width="135" Height="35" Style="{StaticResource StandardButtonStyle}"
                Click="CancelButton_Click"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15 0 0">
                        <ComboBox x:Name="cmbPatient" Width="250" 
                                  Style="{StaticResource StandardComboBoxStyle}" 
                                  services:ComboBoxPlaceholderService.Placeholder="Оберіть пацієнта" 
                                  IsEditable="True" IsTextSearchEnabled="True" 
                                  Margin="0,0,30,0" SelectionChanged="cmbPatient_SelectionChanged"/>
                        <TextBox x:Name="txtIDCard" Width="120"
                                 Style="{StaticResource StandardTextBoxStyle}" 
                                 IsReadOnly="True" services:TextBoxPlaceholderService.Placeholder="Номер картки">
                            <TextBox.ToolTip>
                                <ToolTip Content="Номер медичної картки пацієнта!" />
                            </TextBox.ToolTip>
                        </TextBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
                        <!-- First entry -->
                        <Button Width="35" Height="35" Background="White" Style="{StaticResource StandardButtonStyle}" Click="FirstPage_Click">
                            <Path Data="M18.41,7.41L17,6L11,12L17,18L18.41,16.59L13.83,12L18.41,7.41M12.41,7.41L11,6L5,12L11,18L12.41,16.59L7.83,12L12.41,7.41Z" Fill="#000000" Margin="0,0,5,5"/>
                            <Button.ToolTip>
                                <ToolTip Content="Перший запис" />
                            </Button.ToolTip>
                        </Button>

                        <!-- Back -->
                        <Button Width="35" Height="35" Background="White" Style="{StaticResource StandardButtonStyle}" Click="PreviousPage_Click">
                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" Fill="#000000" Margin="0,0,8,6"/>
                            <Button.ToolTip>
                                <ToolTip Content="Попередній запис" />
                            </Button.ToolTip>
                        </Button>

                        <!-- Forward -->
                        <Button Width="35" Height="35" Background="White" Style="{StaticResource StandardButtonStyle}" Click="NextPage_Click">
                            <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" Fill="#000000" Margin="0,0,6,6"/>
                            <Button.ToolTip>
                                <ToolTip Content="Наступний запис" />
                            </Button.ToolTip>
                        </Button>

                        <!-- Last entry -->
                        <Button Width="35" Height="35" Background="White" Style="{StaticResource StandardButtonStyle}" Click="LastPage_Click">
                            <Path Data="M5.59,7.41L7,6L13,12L7,18L5.59,16.59L10.17,12L5.59,7.41M11.59,7.41L13,6L19,12L13,18L11.59,16.59L16.17,12L11.59,7.41Z" Fill="#000000" Margin="0,0,5,5"/>
                            <Button.ToolTip>
                                <ToolTip Content="Останній запис" />
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Viewbox>
    </Border>
</Page>
