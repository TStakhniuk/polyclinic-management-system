<Page x:Class="DistrictPolyclinic.Pages.AddEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DistrictPolyclinic.Pages"
      xmlns:services="clr-namespace:DistrictPolyclinic.Services"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AddEmployee" FontFamily="Poppins">

    <Page.Resources>
        <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StandardComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StandardTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}" Padding="20">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Main part -->
                <StackPanel Grid.Row="0">
                    <Label Content="Додавання працівника" FontSize="35" FontWeight="Bold" 
               Foreground="{DynamicResource PrimaryTextColor}" 
               HorizontalAlignment="Center" Margin="0 0 0 10"/>

                    <Separator Margin="0 0 0 20" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>

                    <Grid MinWidth="775">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Left side -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ідентифікаційний код" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtIdCode" Style="{StaticResource StandardTextBoxStyle}" 
                         services:TextBoxPlaceholderService.Placeholder="Введіть індентифікаційний код" Margin="0 0 0 15"/>

                            <TextBlock Text="ПІБ працівника" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtFullName" Style="{StaticResource StandardTextBoxStyle}" 
                         services:TextBoxPlaceholderService.Placeholder="Введіть ПІБ працівника" Margin="0 0 0 15"/>

                            <TextBlock Text="Номер телефону" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtPhone" Style="{StaticResource StandardTextBoxStyle}" 
                         services:TextBoxPlaceholderService.Placeholder="Введіть номер телефону" Margin="0 0 0 15"/>

                            <TextBlock Text="Електронна пошта" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource StandardTextBoxStyle}" 
                         services:TextBoxPlaceholderService.Placeholder="Введіть електронну пошту" Margin="0 0 0 15"/>

                            <TextBlock Text="Посада працівника" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <ComboBox x:Name="cmbPosition" services:ComboBoxPlaceholderService.Placeholder="Оберіть посаду працівника" Style="{StaticResource StandardComboBoxStyle}" Margin="0 0 0 15" SelectionChanged="cmbPosition_SelectionChanged">
                                <ComboBoxItem Content="Працівник реєстратури"/>
                                <ComboBoxItem Content="Лікар"/>
                            </ComboBox>

                            <TextBlock Text="Спеціалізація лікаря" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <ComboBox x:Name="cmbSpecialization" services:ComboBoxPlaceholderService.Placeholder="Оберіть спеціалізацію працівника" Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True" Margin="0 0 0 15">
                            </ComboBox>
                        </StackPanel>

                        <!-- Right side -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Дані для входу" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" Margin="0 65 0 15" />
                            <Separator Margin="0 0 0 20" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>

                            <TextBlock Text="Логін" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtLogin" services:TextBoxPlaceholderService.Placeholder="Введіть логін працівника" Style="{StaticResource StandardTextBoxStyle}"  Margin="0 0 0 15"/>

                            <TextBlock Text="Пароль" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <TextBox x:Name="txtPassword" services:TextBoxPlaceholderService.Placeholder="Введіть пароль працівника" Style="{StaticResource StandardTextBoxStyle}"  Margin="0 0 0 89"/>

                            <TextBlock Text="Кабінет" Style="{StaticResource StandardTextBlockStyle}" Margin="0 0 0 5"/>
                            <ComboBox x:Name="cmbOffice" services:ComboBoxPlaceholderService.Placeholder="Оберіть кабінет лікаря" Style="{StaticResource StandardComboBoxStyle}" IsEditable="True" IsTextSearchEnabled="True" Margin="0 0 0 15">
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                    <Separator Margin="0 15 0 0" Background="{DynamicResource TertiaryBackgroundColor}" Height="1"/>
                </StackPanel>


                <!-- Button row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Скасувати" FontSize="17" 
                Background="White" Foreground="Black" 
                FontWeight="Bold" Padding="10 5" Margin="0 15 0 0" 
                HorizontalAlignment="Left" Width="135" Height="35" Style="{StaticResource StandardButtonStyle}"
                Click="CancelButton_Click"/>

                    <Button Grid.Column="1" Content="Додати" FontSize="17" 
                Background="#00308F" Foreground="White" 
                FontWeight="Bold" Padding="10 5" Margin="0 15 0 0" 
                HorizontalAlignment="Right" Width="135" Height="35" Style="{StaticResource StandardButtonStyle}"
                Click="AddButton_Click"/>
                </Grid>
            </Grid>
        </Viewbox>
    </Border>
</Page>
